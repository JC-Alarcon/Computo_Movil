<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8D8D8">

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <RelativeLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/bg_dish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                app:tint="#77000000" />
            <ImageView
                android:src="@drawable/bg_dish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imgDish"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/cpu"
            android:padding="10dp"
            />
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:ignore="ExtraText">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_right"
                android:alpha="0.1"
                app:tint="#77000000" />
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_right"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/derecha"
                app:tint="#F75F"
                android:padding="15dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="110dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txvNameDish"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:text="Procesador"
                android:textAllCaps="true"
                android:gravity="bottom"
                android:textColor="#000"
                android:fontFamily="@font/font_dish"
                android:textSize="40sp"
                android:paddingBottom="5dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txvNumItem"
                android:text="30 items"
                android:textSize="15sp"
                android:textColor="#989898 "
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/buttonback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="146dp"
        android:onClick="irContenido1"
        android:text=">>" />
</RelativeLayout>